<style type="text/css">
    header.intro-header {
        position: relative;
        background-image: url("<%= config.static_url %>/<% if (page['header-img']) { %><%= page['header-img'].replace('https://static.xheldon.cn/', '') %><% } else { %><%= config['header-img'] %><% } %>");
        <% if (page['header-bg-css']) { %>
        background: <%= page['header-bg-css'] %>;
        <% } %>
    }

    <% if (page['header-mask']) { %>
    header.intro-header .header-mask {
        width: 100%;
        height: 100%;
        position: absolute;
        background: rgba(0,0,0, <%= page['header-mask'] %>);
    }
    <% } %>
</style>
<% if (page['header-style'] === 'text') { %>
<header class="intro-header style-text" >
<% } else { %>
<header class="intro-header" >
<% } %>
    <div class="header-mask"></div>
    <% if (page['header-img-credit']) { %>
    <div class="header-img-credit">
        Image by <a href="<%= page['header-img-credit-href'] %>" target="_blank"><%= page['header-img-credit'] %></a>
    </div>
    <% } %>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <div class="tags">
                        <% page.tags.map((tag) => { %>
                            <a class="tag" href="<%= config.baseurl %>/archive/?tag=<%= encodeURIComponent(tag.name) %>" title="<%= tag.name %>"><%= tag.name %></a>
                        <% }) %>
                    </div>
                    <h1><%= page.title %></h1>
                    <h2 class="subheading"><%= page.subtitle %></h2>
                    <span class="meta">✍🏼 写于 <%= date(page.date, "YYYY年MM月DD日") %></span>&nbsp;&nbsp;&nbsp;  
                    <% if (page.lastUpdateTime) { %>
                    <span class="meta">💡 更新于 <%= date(page.lastUpdateTime, "YYYY年MM月DD日") %></span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>