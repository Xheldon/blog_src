<style type="text/css">
  header.intro-header {
    position: relative;
    background-image: url("<%= config.static_url %>/<% if (page['headerImg']) { %><%= page['headerImg'].replace('https://static.xheldon.cn/', '') %><% } else { %><%= config['headerImg'] %><% } %>");

    <% if (page['header-bg-css']) {
      %>background: <%=page['header-bg-css'] %>;
      <%
    }

    %>
  }

  <% if (page['headerMask']) {
    %>header.intro-header .headerMask {
      width: 100%;
      height: 100%;
      position: absolute;
      background: rgba(0, 0, 0, <%=page['headerMask'] %>);
    }

    <%
  }

  %>
</style>
<% if (page['header-style'] === 'text') { %>
<header class="intro-header style-text">
  <% } else { %>
  <header class="intro-header">
    <% } %>
    <div class="headerMask"></div>
    <% if (page['headerImgCredit']) { %>
    <div class="headerImgCredit">
      Image by <a href="<%= page['headerImgCreditHref'] %>" target="_blank"><%= page['headerImgCredit'] %></a>
    </div>
    <% } %>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <div class="post-heading">
            <div class="tags">
              <% page.tags.map((tag) => { %>
              <a class="tag" href="<%= config.baseurl %>/archive/?tag=<%= encodeURIComponent(tag.name) %>" title="<%= tag.name %>"><%= tag.name %></a>
              <% }) %>
            </div>
            <h1><%= page.title %></h1>
            <h2 class="subheading"><%= page.subtitle %></h2>
            <span class="meta">✍🏼 写于 <%= date(page.date, "YYYY年MM月DD日") %></span>&nbsp;&nbsp;&nbsp;
            <% if (page.lastUpdateTime) { %>
            <span class="meta">💡 更新于 <%= date(page.lastUpdateTime, "YYYY年MM月DD日") %></span>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </header>